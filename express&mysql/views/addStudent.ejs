<!--新增学生信息-->
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>新增信息</title>
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-wrap{
            width: 300px;
            margin:0 auto;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">新增学生</a>
            </div>
        </div>
    </nav>
    <!-- Begin page content -->
    <div class="container">
        <div class="page-header">
            <h1>输入学员信息</h1>
        </div>
        <a href="/student" class="btn btn-primary">显示所有学员信息</a>
        <div class="form-wrap">
            <form class="form-horizontal" action="/student" method="POST" >
                <div class="form-group">
                    <label for="id" class="col-sm-3 control-label">学号</label>
                    <div class="col-sm-9">
                        <input
                                type="number"
                                class="form-control"
                                id="id"
                                placeholder="请输入学号"
                                name="id"
                        >
                    </div>
                </div>
                <div class="form-group">
                    <label for="name" class="col-sm-3 control-label">姓名</label>
                    <div class="col-sm-9">
                        <input
                                type="text"
                                class="form-control"
                                id="name"
                                placeholder="请输入学员姓名"
                                name="name"
                        >
                    </div>
                </div>

                <div class="form-group">
                    <label for="age" class="col-sm-3 control-label">年龄</label>
                    <div class="col-sm-9">
                        <input
                                type="number"
                                class="form-control"
                                id="age"
                                placeholder="请输入学员年龄"
                                name="age"
                        >
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">性别</label>
                    <label for="nan" class="col-sm-3 control-label">
                        男
                        <input type="radio" name="sex"  id="nan" value="男"/>
                    </label>

                    <label for="nv" class="col-sm-3 control-label">
                        女
                        <input type="radio" name="sex"  id="nv" value="女" />
                    </label>
                </div>

                <div class="form-group">
                    <label for="birth" class="col-sm-3 control-label">生日</label>
                    <div class="col-sm-9">
                        <input
                                type="date"
                                name="birth"
                                class="form-control"
                                id="birth"
                                placeholder="请输入出生年月"
                        >
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">提交</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
